import cv2
import os

video_path = r"D:\Main File store\Ajin\Project\cctv footage for spi\real cctv\video"
output_dir = r"D:\Main File store\Ajin\Project\cctv footage for spi\real cctv\gv"

os.makedirs(output_dir, exist_ok=True)

cap = cv2.VideoCapture(video_path)
frame_id = 0

while True:
    ret, frame = cap.read()
    if not ret:
        break

    filename = os.path.join(output_dir, f"frame_{frame_id:05d}.jpg")
    cv2.imwrite(filename, frame)
    frame_id += 1

cap.release()
print("Frames extracted successfully")
